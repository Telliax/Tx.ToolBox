<UserControl x:Class="Tx.ToolBox.Wpf.ToolBar.Tools.AsyncButton.AsyncButtonToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:button="clr-namespace:Tx.ToolBox.Wpf.ToolBar.Tools.Button"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:converters="clr-namespace:Tx.ToolBox.Wpf.Converters">
    <Grid>
       <button:ButtonToolView HideImage="{Binding IsExecuting}"/>
       <Border BorderThickness="0" Margin="2"
               Visibility="{Binding IsExecuting, Converter={converters:BoolToVisibilityConverter}}">
           <fa:ImageAwesome Icon="Spinner" Spin="{Binding IsExecuting}" SpinDuration="5" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                            Margin="2" />
       </Border>
    </Grid>
</UserControl>

