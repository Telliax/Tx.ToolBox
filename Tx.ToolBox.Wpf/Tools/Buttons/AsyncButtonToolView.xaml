<UserControl x:Class="Tx.ToolBox.Wpf.Tools.Buttons.AsyncButtonToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:converters="clr-namespace:Tx.ToolBox.Wpf.Converters"
             xmlns:buttons="clr-namespace:Tx.ToolBox.Wpf.Tools.Buttons">
    <Grid>
       <buttons:ButtonToolView Visibility="{Binding IsExecuting, Converter={converters:BoolToVisibilityConverter True=Hidden, False=Visible}}"/>
       <Border BorderThickness="0" Margin="2"
               Visibility="{Binding IsExecuting, Converter={converters:BoolToVisibilityConverter}}">
           <fa:ImageAwesome Icon="Spinner" Spin="{Binding IsExecuting}" SpinDuration="5" 
                            HorizontalAlignment="Center" VerticalAlignment="Stretch" 
                            Margin="2" Stretch="Uniform"/>
       </Border>
    </Grid>
</UserControl>

